extends layout

block content
  h2 Hi #{profile.username}
  form(action=`/api/v1/authenticate/reset-password?token=${profile.token}`, method='POST', class='form')
    .field-wrap
      label(for='password')
        | Password:
      input(type='password', name='password', required, class='input')
    .top-row
      .field-wrap
        label(for='passwordConfirm')
          | Confirm Password:
        input(type='password', name='passwordConfirm', required, class='input')
    button(type='submit', class='button button-block') Submit

  style.
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
      font-size: 14px;
    }

    body {
      background: #f2f2f2;
    }

    form {
      background: #fff;
      padding: 20px;
      max-width: 600px;
      margin: 40px auto;
      border-radius: 8px;
      box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
      margin: 0 0 20px;
      color: #333;
      font-weight: 400;
      font-size: 28px;
      line-height: 1.4;
    }

    input,
    textarea {
      display: block;
      box-sizing: border-box;
      width: 100%;
      padding: 10px;
      background-color: #f8f8f8;
      border-radius: 4px;
      border: none;
      border-bottom: 1px solid #ccc;
      margin-bottom: 10px;
      font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
      font-size: 14px;
      color: #333;
    }

    input:focus,
    textarea:focus {
      outline: none;
      border-bottom-color: #5E9BD9;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      font-size: 14px;
      color: #333;
    }

    .button {
      border-radius: 4px;
      border: none;
      background-color: #5E9BD9;
      color: #fff;
      text-align: center;
      font-size: 18px;
      font-weight: 400;
      padding: 12px 0;
      width: 100%;
      transition: all 0.5s ease;
      cursor: pointer;
    }

    .button:hover {
      background-color: #4c8bd2;
    }

    .button-block {
      display: block;
      width: 100%;
    }

    /* Top Row */
    .top-row {
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }

    .top-row .field-wrap {
      width: 48%;
      margin-right: 4%;
      
    }